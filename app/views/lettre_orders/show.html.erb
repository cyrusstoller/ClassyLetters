<div class="sixteen columns">
  <h2>Lettre: &nbsp <%= @lettre_order.uuid %></h2>
</div>
<div class="row">
  <div class="ten columns">
    <div class="right-buffer">
      <%= render 'lettre_orders/lettre_preview', :lettre_order => @lettre_order %>
    </div>
  </div>

  <div class="six columns">
    <%= render 'lettre_orders/address_preview', :lettre_order => @lettre_order %>

    <%= render 'lettre_orders/delivery_options', :lettre_order => @lettre_order %>

    <%= render 'lettre_orders/price_and_subtotal', :lettre_order => @lettre_order %>
    
    <div>
      <% if @lettre_order.delivery_status == 0 %>
        <%= link_to "Purchase and Send", new_lettre_order_purchase_path(@lettre_order), :class => "button" %>
      <% else %>
        <%= link_to "View Receipt", lettre_order_purchase_path(@lettre_order), :class => "button" %>
      <% end %>
      <p>Once you purchase your order you will no longer be able to make any changes.</p>
    </div>
    
    <% if can? :manage, @lettre_order %>
      <%= link_to 'Edit Order', edit_lettre_order_path(@lettre_order) %> | <%= link_to 'Delete Order', @lettre_order, confirm: 'Are you sure?', method: :delete %> |
    <% end %>
    <%= link_to 'Back to my Lettre Orders', lettre_orders_path %>
  </div>
</div>