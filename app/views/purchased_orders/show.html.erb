<div class="sixteen columns">
  <h2>Letter: &nbsp <%= @letter_order.uuid %></h2>
</div>
<div class="row">
  <div class="ten columns">
    <%= render 'letter_orders/letter_preview', :letter_order => @letter_order %>
  </div>

  <div class="six columns">
    <%= render 'letter_orders/address_preview', :letter_order => @letter_order %>

    <%= render 'letter_orders/delivery_options', :letter_order => @letter_order %>

    <%= render 'letter_orders/price_and_subtotal', :letter_order => @letter_order %>
    
    <div class="add-top">
      <% if @letter_order.delivery_status == 1 %>
        <%= link_to "I fulfilled this order", fulfilled_purchased_order_path(@letter_order.to_param, :delivery_status => 2), :method => :put %>
      <% else %>
        <%= link_to "Set to purchased but not fulfilled", fulfilled_purchased_order_path(@letter_order.to_param, :delivery_status => 1), :method => :put %>
      <% end %>
      | <%= link_to "Back to purchased orders", purchased_orders_path %>
    </div>
  </div>
</div>